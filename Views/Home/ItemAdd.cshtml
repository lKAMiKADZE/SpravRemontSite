@model SpravRemontSite.DataObject.ITEMS_BUY

@{
    ViewData["Title"] = "Добавление товара";
}

<h2>Добавление товара</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ItemAdd" asp-controller="Home" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden="hidden" asp-for="ID_ITEMS_SHOP" />

            <div class="form-group">
                

                <label asp-for="IMG_URL_F" class="control-label">Картинка</label><br /><br />
                <input asp-for="IMG_URL_F" type="file" class="form-control" />
                <span asp-validation-for="IMG_URL_F" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NAME_IB" class="control-label">Название</label>
                <input asp-for="NAME_IB" class="form-control" />
                <span asp-validation-for="NAME_IB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NOTE_IB" class="control-label">Описание</label>
                <input asp-for="NOTE_IB" class="form-control" />
                <span asp-validation-for="NOTE_IB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PRICE" class="control-label">Цена</label>
                <input asp-for="PRICE" class="form-control" />
                <span asp-validation-for="PRICE" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
