@model SpravRemontSite.DataObject.USLUG

@{
    ViewData["Title"] = "Создание услуги";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Создание услуги</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateUslug" asp-controller="admpanel" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            
            <div class="form-group">
                <label asp-for="NAME_USLUG" class="control-label">Название</label>
                <input asp-for="NAME_USLUG" class="form-control" />
                <span asp-validation-for="NAME_USLUG" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="IMG_URL_F" class="control-label">Картинка</label><br /><br />
                <input asp-for="IMG_URL_F" type="file" class="form-control" />
                <span asp-validation-for="IMG_URL_F" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>



