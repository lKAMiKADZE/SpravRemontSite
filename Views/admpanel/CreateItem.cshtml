@model SpravRemontSite.DataObject.ITEM_KATEGOR

@{
    ViewData["Title"] = "Создание подкатегории";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Создание подкатегории товара</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateItem" asp-controller="admpanel" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="KATEGOR.ID_KATEGOR" hidden="hidden" />


            <div class="form-group">
                <label asp-for="ITEM.NAME_ITEM" class="control-label">Название</label>
                <input asp-for="ITEM.NAME_ITEM" class="form-control" />
                <span asp-validation-for="ITEM.NAME_ITEM" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="ITEM.IMG_URL_F" class="control-label">Картинка</label><br /><br />
                <input asp-for="ITEM.IMG_URL_F" type="file" class="form-control" />
                <span asp-validation-for="ITEM.IMG_URL_F" class="text-danger"></span>
            </div>
            <br /><br />
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>



