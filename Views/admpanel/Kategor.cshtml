@model IEnumerable<SpravRemontSite.DataObject.KATEGOR>

@{
    ViewData["Title"] = "Kategor";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Категории</h2>
<h4>Добавить категорию</h4>

<br />
<div class="col-md-6">
    <form asp-action="AddKategor">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label>Имя категории</label><br />
            <input name="NAME_KATEGOR"  />
        </div>


        <div class="form-group">
            <input type="submit" value="Добавить" class="btn btn-default" />
        </div>
    </form>
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                Список категорий
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NAME_KATEGOR)
                </td>
                <td>
                    @Html.ActionLink("Редактировать", "EditKategor", new { ID_KATEGOR = item.ID_KATEGOR, NAME_KATEGOR = item.NAME_KATEGOR }) |
                    @Html.ActionLink("Детали", "DetailKategor", new { ID_KATEGOR = item.ID_KATEGOR, NAME_KATEGOR = item.NAME_KATEGOR }) |
                    @Html.ActionLink("Удалить", "DeleteKategor", new { ID_KATEGOR = item.ID_KATEGOR })
                </td>
            </tr>
        }
    </tbody>
</table>
